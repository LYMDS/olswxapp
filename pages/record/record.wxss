.record{
  display: flex;
  flex-flow: column wrap;
  margin-left: 5%;
  width: 90%;
  /* 最大的view,是一条记录的整体 */
}

.information{
  position: relative;
  height: 100rpx;
  margin-bottom: 10rpx;
  /* 一条记录的第一行，简要行 */
}

.bgimg0{
  height: 100rpx;
  width: 100%;
  border-radius: 10rpx;
}

.timecontent{
  position: absolute;
  top: 25rpx;
  left: 20rpx;
  color: white;
}

.reducecontent{
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  color: white;
}

