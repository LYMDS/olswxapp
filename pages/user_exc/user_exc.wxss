@import "../../iconfont.wxss";

page{
  display: flex;
  flex-direction: column;
}

.type{
  height : 150rpx;
  width: 150rpx;
  border: solid 1px rgba(0, 0, 0 , 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: 30rpx;
}


#garage_num{
  width: 300rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}


#input_button{
  display: flex;
  background-color: rgba(0, 0, 0, 0.1);
  height: 100rpx;
  width: 90%;
  margin-left: 5%;
  font-size: 35rpx;
  border-radius: 50rpx;
  color: rgb(0, 0, 0);
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;

}


#guide{
  width: 235rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 25rpx;
}


#scancode{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 50rpx;
}


.tip{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  margin-left: 5%;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.400)
}

#type_box{
  display: flex;
  flex-flow: nowrap row;
  justify-content: space-around;
  margin-top: 30rpx;
}

#except_text{
  background-color: rgba(0, 0, 0, 0.322);
  margin-left: 5%;
  width: 82%;
  height: 200rpx;
  margin-top: 30rpx;
  padding: 4% 4% 4% 4%;
  border-radius: 60rpx;
  font-size: 32rpx;
}

#choose_photo{
  background-color: #aaa;
  height: 150rpx;
  width: 150rpx;
  margin-top: 30rpx;
  margin-left: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#button_box{
  width: 90%;
  margin-left: 5%;
  margin-top: 50rpx;
  background-color: green;
  color: #fff
}

.readypost{
  height:80rpx;
  width:80rpx;
}

#img_box{
  margin-left: 5%;
  display: flex;
  height: 100rpx;
  align-items: center;
  flex-flow: row nowrap;
}